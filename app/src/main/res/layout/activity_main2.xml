<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearParte1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="273dp">

            <ImageView
                android:layout_width="351dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                app:srcCompat="@drawable/logo_crecer" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearParte2"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/linearParte1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:text="INICIO DE SESIÓN"
            android:textColor="#040404"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearParte3"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_below="@+id/linearParte2"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                app:srcCompat="@drawable/icon_usuario" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="#951F1F"
                android:ems="10"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                app:srcCompat="@drawable/icon_contrase_a" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:backgroundTint="#951F1F"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:backgroundTint="#951F1F"
                android:drawableEnd="@drawable/ic_iniciar_sesion"
                android:drawableTint="#fff"
                android:text="INGRESAR"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearParte4"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/linearParte3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagetwitter"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:clickable="false"
            app:srcCompat="@drawable/icon_social_twitter" />

        <ImageView
            android:id="@+id/imagefacebook"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_social_facebook" />

        <ImageView
            android:id="@+id/imageyoutube"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_social_youtube" />

        <ImageView
            android:id="@+id/imagelink"
            android:layout_width="60dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon_social_linkedin" />
    </LinearLayout>

</RelativeLayout>