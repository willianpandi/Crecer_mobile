<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".activity.ui.credito.CreditoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/carga_lineal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F2DA86"
            android:gravity="center"
            android:text="Creditos para toda Necesidad"
            android:textColor="#951F1F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDesdes"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Desde:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textViewCalendario_Credito"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="aaaa-mm-dd"
                android:inputType="date"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                app:icon="@drawable/ic_calendario"
                app:iconGravity="top" />

            <TextView
                android:id="@+id/textViewHasta"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:text="Hasta:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textViewCalendario_Credito2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="aaaa-mm-dd"
                android:inputType="date"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_hc"
                android:layout_width="35dp"
                android:layout_height="45dp"
                app:icon="@drawable/ic_calendario"
                app:iconGravity="top" />

        </LinearLayout>

        <Button
            android:id="@+id/button10"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:drawableEnd="@drawable/places_ic_search"
            android:drawableTint="#fff"
            android:text="Buscar por Fecha"
            android:textAllCaps="false" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#951F1F"
            android:backgroundTintMode="src_over">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#951F1F"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:backgroundTintMode="add"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/texView_n_cuota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="N°"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/texView_fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Fecha Vencimiento"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_dias"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Días"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_tasa_cuota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tasa de Cuota"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_capital_reducido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="Capital Reducido"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_cuota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cuota"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_capital"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capital"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_interes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Interes"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_credito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_credito" />


        <Button
            android:id="@+id/button11"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Descargar PDF"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@drawable/ic_descargar" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="#F2DA86"
            android:gravity="center"
            android:text="Solicita tu crédito ya!"
            android:textColor="#951F1F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Cotiza tu Crédito"
                android:textAllCaps="false"
                app:icon="@drawable/ic_calculadora" />

            <Button
                android:id="@+id/button5"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Descarga Solicitud"
                android:textAllCaps="false"
                app:icon="@drawable/ic_descargar" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>